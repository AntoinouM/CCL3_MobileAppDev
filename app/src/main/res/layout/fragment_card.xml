<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_fragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cardFront"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_cardFrontTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/card_front_title_bg"
            android:gravity="center"
            tools:text="Title"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_cardFrontContent"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/card_front_content_bg"
            android:gravity="center"
            tools:text="Front card"
            android:textAlignment="center"
            android:textSize="22sp"
            android:translationY="50dp" />
    </androidx.cardview.widget.CardView> <!-- card front -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cardBack"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardElevation="0dp"
        android:alpha="0"
        android:background="@drawable/card_front_content_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_cardBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_back_bg"
            android:gravity="center"
            tools:text="Back card"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="22sp" />

    </androidx.cardview.widget.CardView> <!-- card back -->

</androidx.constraintlayout.widget.ConstraintLayout>