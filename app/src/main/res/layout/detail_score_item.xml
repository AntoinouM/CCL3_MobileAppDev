<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/project_Raisin_black"
    android:paddingHorizontal="6dp"
    android:paddingVertical="6dp">

    <TextView
        android:id="@+id/tv_catNameResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="Category"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/project_Ghost_White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar"
        android:layout_width="120dp"
        android:layout_height="12dp"
        android:layout_marginRight="24dp"
        android:max="200"
        android:progressDrawable="@drawable/custom_progress_bg"
        android:progress="200"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/tv_catNameResult"
        app:layout_constraintBottom_toBottomOf="@+id/tv_catNameResult"
        app:layout_constraintEnd_toStartOf="@+id/tv_scoreCatPercent" />

    <TextView
        android:id="@+id/tv_scoreCatPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="65%"
        android:textSize="18sp"
        android:textColor="@color/project_Ghost_White"
        app:layout_constraintBottom_toBottomOf="@+id/tv_catNameResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_catNameResult" />

</androidx.constraintlayout.widget.ConstraintLayout>